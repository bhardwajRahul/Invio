{
  "compilerOptions": {
    "lib": ["deno.ns", "deno.window"],
    "strict": true,
    "skipLibCheck": true
  },
  "tasks": {
    "dev": {
      "command": "deno run --allow-read --allow-write --allow-net --allow-env --allow-run --watch src/app.ts",
      "desc": "Run the application in development mode"
    },
    "start": {
      "command": "deno run --allow-read --allow-write --allow-net --allow-env --allow-run src/app.ts",
      "desc": "Run the application"
    }
  },
  "fmt": {
    "options": {
      "lineWidth": 80
    }
  },
  "lint": {
    "rules": {
      "tags": ["recommended"]
    }
  },
  "imports": {
    "@pakornv/fresh-plugin-tailwindcss": "jsr:@pakornv/fresh-plugin-tailwindcss@^1.0.3",
    "daisyui": "npm:daisyui@^5.0.54",
    "hono": "https://deno.land/x/hono@v4.0.10/mod.ts",
    "hono/cors": "https://deno.land/x/hono@v4.0.10/middleware/cors/index.ts",
    "hono/basic-auth": "https://deno.land/x/hono@v4.0.10/middleware/basic-auth/index.ts",
    "hono/jwt": "https://deno.land/x/hono@v4.0.10/middleware/jwt/index.ts",
    "sqlite": "https://deno.land/x/sqlite@v3.9.1/mod.ts",
    "djwt": "https://deno.land/x/djwt@v3.0.2/mod.ts",
    "tailwindcss": "npm:tailwindcss@^4.1.12",
    "uuid": "https://deno.land/std@0.224.0/uuid/mod.ts",
    "pdf-lib": "npm:pdf-lib@^1.17.1",
    "puppeteer-core": "npm:puppeteer-core@22.13.1",
    "crypto": "https://deno.land/std@0.224.0/crypto/mod.ts",
    "dotenv": "https://deno.land/std@0.224.0/dotenv/mod.ts",
    "yaml": "https://deno.land/std@0.224.0/yaml/mod.ts",
    "std/path": "https://deno.land/std@0.224.0/path/mod.ts"
  }
}
