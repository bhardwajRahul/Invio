{
  "nodeModulesDir": "auto",
  "lock": false,
  "tasks": {
    "start": "deno run -A --watch=static/,routes/ dev.ts",
    "build": "deno run -A dev.ts build",
    "preview": "deno run -A main.ts",
    "css:build": "deno run --allow-read --allow-write --allow-env --allow-run npm:tailwindcss -i ./static/input.css -o ./static/styles.css --minify",
    "css:watch": "deno run --allow-read --allow-write --allow-env --allow-run npm:tailwindcss -i ./static/input.css -o ./static/styles.css --watch"
  },
  "compilerOptions": { "jsx": "react-jsx", "jsxImportSource": "preact" },
  "imports": {
    "$std/": "https://deno.land/std@0.224.0/",
    "@preact-icons/lu": "jsr:@preact-icons/lu@^1.0.13",
    "preact": "https://esm.sh/preact@10.22.0",
    "preact/hooks": "https://esm.sh/preact@10.22.0/hooks",
    "preact/jsx-runtime": "https://esm.sh/preact@10.22.0/jsx-runtime",
    "preact/debug": "https://esm.sh/preact@10.22.0/debug",
    "$fresh/": "https://deno.land/x/fresh@1.7.3/",
    "fresh": "https://deno.land/x/fresh@1.6.5/mod.ts",
    "preact/": "https://esm.sh/preact@10.22.0/",
    "@preact/signals": "https://esm.sh/*@preact/signals@1.2.2",
    "@preact/signals-core": "https://esm.sh/*@preact/signals-core@1.5.1"
  },
  "lint": { "rules": { "tags": ["fresh", "recommended"] } },
  "exclude": ["**/_fresh/*"]
}
